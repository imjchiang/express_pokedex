<div>
    <h1><%= pokemon.name[0].toUpperCase() + pokemon.name.substr(1, pokemon.name.length); %></h1>
    <img src="<%= pokemon.sprites.front_default %>">
    <% let pokeTypes = pokemon.types %> 
    <h4>Type(s): 
    <% for (let i = 0; i < pokeTypes.length; i++) 
    { %>
        <%= pokeTypes[i].type.name[0].toUpperCase() + pokeTypes[i].type.name.substr(1, pokeTypes[i].type.name.length); %>
        <% if (i < pokeTypes.length - 1) 
        { %>
            and
        <% } %>
    <% } %>
    </h4>
</div>